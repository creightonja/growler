<html>
    <head>
        <title>Growlr - Edit {{ user.getUserName }}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    </head>

    <body>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">

            <a class="navbar-brand" href="/">Growlr</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <center>
            <h2>Beer Search</h2>

            <form action="/{{ user.getId }}/search_beer" method="post" class="form-inline">
                <div class="form-group">

                    <select id ="search_field" name = "search_field" type = "text">
                        <option value = "beer_name">Beer Name</option>
                        <option value = "style"> Style </option>
                        <option value = "abv">ABV</option>
                        <option value = "ibu">IBU</option>
                        <option value = "container"> Container </option>
                        <option value = "brewery"> Brewery </option>
                    </select>
                </div>
                <br>
                <br>
                <div class="form-group">
                    <input class="input-lg" id="search_term" name="search_term" type="text" placeholder="Search">

                    <button type="submit" class="btn-warning btn-lg">Submit</button>
                </div>
            </form>
            {% if all_beers is not empty %}
                <h3>Here are all the beers!</h3>
                    <ul>
                        {% for beer in all_beers %}
                            <li><a href="/{{ user.getId }}/beer/{{beer.getId}}">{{ beer.getBeerName }}</a></li>
                        {% endfor %}
                    </ul>
            {% endif %}
            </center>
          </div>


        <div class="col-md-3">
        {% if user.getUserName == "Admin" %}
            <h3>Add Beer</h3>
            <form action="/{{ user.getId }}/beers" method="post">
              <div class="form-group">
                <label>Enter your Beer's name</label>
                <input class="form-control" id="beer_name" name="beer_name" type="text">
              </div>

              <div class="form-group">
                <label for 'style'>Select a beer style.</label>
                  <select id = "style" name = "style" type = "text">

                          <option value = "IPA"> IPA</option>
                          <option value = "Pale Ale"> Pale Ale</option>
                          <option value = "Stout"> Stout</option>
                          <option value = "Porter"> Porter</option>
                          <option value = "Amber"> Amber</option>
                          <option value = "Lager"> Lager</option>
                          <option value = "Belgian"> Belgian</option>
                          <option value = "Blonde Ale"> Blonde Ale</option>
                          <option value = "Brown Ale"> Brown Ale</option>
                          <option value = "Pilsner Ale"> Pilsner Ale</option>
                  </select>
                </div>

              <div class="form-group">
                <label>Enter your Brewery's name</label>
                <input class="form-control" id="brewery" name="brewery" type="text">
              </div>

              <div class="form-group">
                <label>Enter your ABV (Alcohol by Volume).</label>
                <input class="form-control" class="input-lg" id="abv" name="abv" type="number">
              </div>
              <div class="form-group">
                <label>Enter your IBU (Internation Bitterness Units).</label>
                <input class="form-control" id="ibu" name="ibu" type="number">
              </div>
              <div class="form-group">
              <label for 'container'>Select a container type to add it to the beer.</label>
                <select id = "container" name = "container" type = "text">

                        <option value = "Growler"> Growler </option>
                        <option value = "Bottle"> Bottle </option>
                        <option value = "Can"> Can </option>

                    </select>
                    <br>
                    <label>Enter an Image path.</label>
                    <input class="form-control" id="image" name="image" type="text">
                    <br>
                </select>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn-warning btn-lg">Submit Information</button>
                </div>
              </form>
          {% endif %}
      </div>
      </div>
    </div>
  </body>


